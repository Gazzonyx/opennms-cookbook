<?xml version="1.0"?>

<xmlrpcd-configuration max-event-queue-size="<%=@max_event_queue_size%>">
        <external-servers retries="<%=@external_servers[:retries]%>" elapse-time="<%=@external_servers[:elapse_time]%>">
                <xmlrpc-server url="<%=@external_servers[:url]%>" timeout="<%=@external_servers[:timeout]%>" />
                <serverSubscription>baseEvents</serverSubscription>
        </external-servers>
        <subscription name="baseEvents">
                <% @base_events.each do |event| -%>
                <subscribed-event uei="<%=event%>"/>
                <% end -%>
	</subscription>
</xmlrpcd-configuration>
